@model AddShopping
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Sepet</span> Sepet Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="Home" asp-action="Shopping" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="shoppingName" class="form-label">Sepet Adı</label>
                            <input asp-for="shoppingName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Lütfen Kategori Adını Giriniz" aria-describedby="defaultFormControlHelp">
                          
                        </div> 
                        <div class="form-group">
                            <label asp-for="shoppingDescription" class="form-label">Sepet Açıklaması</label>
                            <input asp-for="shoppingDescription" type="text" class="form-control" id="defaultFormControlInput" placeholder="Lütfen Kategori Adını Giriniz" aria-describedby="defaultFormControlHelp">
                          
                        </div>


                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </form>

            </div>
        </div>


    </div>
