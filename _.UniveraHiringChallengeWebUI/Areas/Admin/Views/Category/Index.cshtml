@model List<CategoryViewModel>

<div class="card">
    <h5 class="card-header">Kategoriler</h5>
    <div class="table-responsive text-nowrap m-2">



        <a asp-area="Admin" asp-controller="Category" asp-action="Add" class="btn btn-success mb-2">
            Kategori Ekle<i class="bx bx-plus"></i>
        </a>




        <table class="table table-bordered" id="articlesTable" width="100%" collspacing="0">
            <thead>
                <tr>
                    <th>Kategori Adı</th>
                  
                    <th>İşlemler</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>KategoriAdı</th>
                   

                    <th>İşlemler</th>

                </tr>
            </tfoot>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr name="@item.categoryId">

                        <td>@item.categoryName</td>
                       
                        <td>
                            <a class="btn btn-info btn-sm" data-id="@item.categoryId" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@item.categoryId"><i class="bx bxs-edit"></i></a>
                            <a class="btn btn-danger btn-sm" data-id="@item.categoryId" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@item.categoryId"><i class="bx bx-minus-circle"></i></a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/productIndex.js"></script>
          }