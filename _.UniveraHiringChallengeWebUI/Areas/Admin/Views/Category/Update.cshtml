@model CategoryViewModel

            <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">

               
                
                    <div class="form-group">
                        <label asp-for="categoryName" class="form-label">Kategori Adı</label>
                        <input asp-for="categoryName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Lütfen Başlık Giriniz" aria-describedby="defaultFormControlHelp" value="@Model.categoryName">
                        <input asp-for="categoryId" value="@Model.categoryId" type="hidden" />
               </div>

            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
            </form>
       

